# Fintrex Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Meta WhatsApp Business API
# Get these from https://developers.facebook.com/
WHATSAPP_TOKEN=EAAxxxxxxxxxxxxx_your_permanent_token_here
WHATSAPP_VERIFY_TOKEN=fintrex_webhook_2025

# Google Gemini API (for OCR and LLM)
# Get this from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyxxxxxxxxxx_your_key_here

# Email Service (Optional - for sending acknowledgments)
# Option 1: SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxx

# Option 2: Mailgun
MAILGUN_API_KEY=key-xxxxxxxxxx
MAILGUN_DOMAIN=mg.yourdomain.com

# Option 3: AWS SES
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxx
AWS_REGION=us-east-1

# Application Configuration
NODE_ENV=production
APP_URL=https://your-app-domain.com

# Feature Flags (Optional)
ENABLE_WHATSAPP_AUTOMATION=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_AUTO_KYC=true
ENABLE_AUTO_JOURNAL_ENTRIES=true

# Rate Limiting (Optional)
MAX_DOCUMENTS_PER_HOUR=100
MAX_FILE_SIZE_MB=25

# Logging (Optional)
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false
