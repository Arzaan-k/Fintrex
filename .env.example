# Fintrex Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_PROJECT_ID=your-project-id

# ============================================
# BACKEND/EDGE FUNCTION SECRETS
# ============================================
# IMPORTANT: These keys should NEVER be prefixed with VITE_
# They should be set as Supabase secrets using:
# supabase secrets set KEY_NAME=value
#
# The following keys are used by Edge Functions only:
# - GEMINI_API_KEY (Google Gemini for OCR)
# - DEEPSEEK_API_KEY (DeepSeek Vision for OCR)
# - GOOGLE_VISION_API_KEY (Google Cloud Vision for OCR)
# - OCRSPACE_API_KEY (OCR.Space/Tesseract for OCR)
# - WHATSAPP_TOKEN (Meta WhatsApp Business API)
# - SENDGRID_API_KEY (SendGrid for emails)
#
# Example setup:
# supabase secrets set GEMINI_API_KEY=AIzaSyxxxxxxxxxx
# supabase secrets set DEEPSEEK_API_KEY=sk-xxxxxxxxxx
# supabase secrets set GOOGLE_VISION_API_KEY=AIzaSyxxxxxxxxxx
# supabase secrets set OCRSPACE_API_KEY=K8xxxxxxxxxx

# Email Service (Optional - for sending acknowledgments)
# Option 1: SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxx

# Option 2: Mailgun
MAILGUN_API_KEY=key-xxxxxxxxxx
MAILGUN_DOMAIN=mg.yourdomain.com

# Option 3: AWS SES
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxx
AWS_REGION=us-east-1

# Application Configuration
NODE_ENV=production
APP_URL=https://your-app-domain.com

# Feature Flags (Optional)
ENABLE_WHATSAPP_AUTOMATION=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_AUTO_KYC=true
ENABLE_AUTO_JOURNAL_ENTRIES=true

# Rate Limiting (Optional)
MAX_DOCUMENTS_PER_HOUR=100
MAX_FILE_SIZE_MB=25

# Logging (Optional)
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false
