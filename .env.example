# ============================================
# FINTREX ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# Last updated: 2025-01-15

# ============================================
# 1. SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous (public) key - safe to expose in frontend
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Your Supabase project ID (optional, for reference)
VITE_SUPABASE_PROJECT_ID=your-project-id

# ============================================
# 2. OCR API KEYS (EDGE FUNCTION SECRETS)
# ============================================
# IMPORTANT: These keys should NEVER be prefixed with VITE_
# They are server-side only and should be set as Supabase secrets
#
# Set them using Supabase CLI:
#   supabase secrets set KEY_NAME=value
#
# Or via Supabase Dashboard:
#   Settings > Edge Functions > Secrets

# Google Gemini API (Recommended for best OCR results)
# Get from: https://makersuite.google.com/app/apikey
# supabase secrets set GEMINI_API_KEY=AIzaSy...
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# DeepSeek Vision API (Alternative OCR provider)
# Get from: https://platform.deepseek.com/api_keys
# supabase secrets set DEEPSEEK_API_KEY=sk-...
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Cloud Vision API (High accuracy OCR)
# Get from: https://console.cloud.google.com/apis/credentials
# supabase secrets set GOOGLE_VISION_API_KEY=AIzaSy...
GOOGLE_VISION_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OCR.Space API (Tesseract-based, free tier available)
# Get from: https://ocr.space/ocrapi
# supabase secrets set OCRSPACE_API_KEY=K8...
OCRSPACE_API_KEY=K8xxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# 3. WHATSAPP INTEGRATION (OPTIONAL)
# ============================================
# For receiving documents via WhatsApp Business API
# Get from: https://developers.facebook.com/apps/

# WhatsApp Business API Token
# supabase secrets set WHATSAPP_TOKEN=EAAG...
WHATSAPP_TOKEN=EAAGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# WhatsApp Phone Number ID
# supabase secrets set WHATSAPP_PHONE_NUMBER_ID=123...
WHATSAPP_PHONE_NUMBER_ID=123456789012345

# WhatsApp Verify Token (set this yourself for webhook verification)
# supabase secrets set WHATSAPP_VERIFY_TOKEN=your-secret-token
WHATSAPP_VERIFY_TOKEN=your-unique-verify-token-here

# ============================================
# 4. EMAIL SERVICE (OPTIONAL)
# ============================================
# For sending email notifications and acknowledgments
# Choose ONE of the following providers:

# Option 1: SendGrid (Recommended)
# Get from: https://app.sendgrid.com/settings/api_keys
# supabase secrets set SENDGRID_API_KEY=SG...
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Fintrex

# Option 2: Mailgun
# Get from: https://app.mailgun.com/app/account/security/api_keys
# supabase secrets set MAILGUN_API_KEY=key-...
# supabase secrets set MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_API_KEY=key-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAILGUN_DOMAIN=mg.yourdomain.com

# Option 3: AWS SES
# Get from: https://console.aws.amazon.com/iam/
# supabase secrets set AWS_ACCESS_KEY_ID=AKIA...
# supabase secrets set AWS_SECRET_ACCESS_KEY=xxxxx...
# supabase secrets set AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# 5. APPLICATION CONFIGURATION
# ============================================

# Environment (development, staging, production)
NODE_ENV=production

# Your application URL
APP_URL=https://fintrex.onrender.com

# Application name
APP_NAME=Fintrex

# ============================================
# 6. FEATURE FLAGS (OPTIONAL)
# ============================================
# Enable/disable specific features

# WhatsApp automation for document receipt
ENABLE_WHATSAPP_AUTOMATION=true

# Email automation for document receipt
ENABLE_EMAIL_AUTOMATION=true

# Automatic KYC document processing
ENABLE_AUTO_KYC=true

# Automatic journal entry creation
ENABLE_AUTO_JOURNAL_ENTRIES=true

# Human-in-the-loop review queue
ENABLE_REVIEW_QUEUE=true

# ============================================
# 7. RATE LIMITING & SECURITY (OPTIONAL)
# ============================================

# Maximum documents per hour per user
MAX_DOCUMENTS_PER_HOUR=100

# Maximum file size in MB
MAX_FILE_SIZE_MB=25

# Minimum confidence threshold for auto-approval (0-1)
MIN_CONFIDENCE_THRESHOLD=0.95

# ============================================
# 8. LOGGING & DEBUGGING (OPTIONAL)
# ============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug logs
ENABLE_DEBUG_LOGS=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
